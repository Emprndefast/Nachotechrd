# ============================================================================
# IONOS HOSTING - Configuración para nachotechrd.com
# Versión simplificada para hosting compartido (sin php_value)
# ============================================================================

# Habilitar RewriteEngine para URLs amigables
RewriteEngine On

# Redirigir HTTP a HTTPS (descomentar cuando SSL esté activo)
# RewriteCond %{HTTPS} off
# RewriteCond %{HTTP_HOST} ^(www\.)?nachotechrd\.com$ [NC]
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirigir www a no-www (opcional)
# RewriteCond %{HTTP_HOST} ^www\.nachotechrd\.com$ [NC]
# RewriteRule ^(.*)$ https://nachotechrd.com/$1 [L,R=301]

# Permitir acceso directo a archivos estáticos y carpetas
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond $1 !^(index\.php|img|assets|css|fonts|js|uploads|Pagos|robots\.txt|favicon\.ico)

# Redirigir todo lo demás a index.php (CodeIgniter)
RewriteRule ^(.*)$ index.php/$1 [L]

# Prevenir listado de directorios
Options -Indexes

# ============================================================================
# NOTA: Configuración PHP
# ============================================================================
# IONOS hosting compartido no permite php_value en .htaccess
# Configura estos valores desde el Panel de Control IONOS o php.ini:
# - max_input_vars = 5000
# - max_execution_time = 300
# - memory_limit = 256M
# - upload_max_filesize = 10M
# - post_max_size = 12M
# ============================================================================
